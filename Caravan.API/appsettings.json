{
  "ConnectionStrings": {
    "CaravanDatabase": "Server=localhost;Port=5432;Database=caravan;User Id=postgres;Password=admin;SslMode=Prefer"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Oakton": "Warning",
        "Wolverine": "Warning",
        "Marten": "Warning",
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ]
  },
  "Keycloak": {
    "realm": "caravan",
    "auth-server-url": "http://keycloak.local",
    "ssl-required": "internal",
    "resource": "caravan-client",
    "audience": "account",
    "verify-token-audience": true,
    "confidential-port": 0
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "Authority": "http://keycloak.local/realms/caravan",
        "RequireHttpsMetadata": false,
        "MetadataAddress": "http://keycloak.local:8888/realms/caravan/.well-known/openid-configuration",
        "TokenValidationParameters": {
          "ValidAudience": "account",
          "ValidIssuer": "http://keycloak.local:8888/realms/caravan",
          "ValidateAudience": true,
          "ValidateIssuer": true
        }
      }
    }
  },
  "CORS": {
    "Allow": "http://127.0.0.1:5173,http://localhost:5173"
  }
}
