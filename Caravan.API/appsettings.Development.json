{
  "ConnectionStrings": {
    "CaravanDatabase": "Server=caravan-db;Port=5432;Database=caravan;User Id=postgres;Password=admin;SslMode=Prefer"
  },
  "Keycloak": {
    "realm": "caravan",
    "auth-server-url": "http://keycloak.local",
    "ssl-required": "internal",
    "resource": "caravan-client",
    "audience": "account",
    "verify-token-audience": true,
    "confidential-port": 0
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "Authority": "http://keycloak.local/realms/caravan",
        "RequireHttpsMetadata": false,
        "MetadataAddress": "http://keycloak.local:8080/realms/caravan/.well-known/openid-configuration",
        "TokenValidationParameters": {
          "ValidAudience": "account",
          "ValidIssuer": "http://keycloak.local:8888/realms/caravan",
          "ValidateAudience": true,
          "ValidateIssuer": true
        }
      }
    }
  }
}
